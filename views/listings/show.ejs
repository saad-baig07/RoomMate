<% layout("/layouts/boilerplate") %>

<br>

<h2 class="offset-4">
  <b><%= listing.title %></b>
</h2>

<div class="card offset-4" style="width: 25rem;">
  <div class="card-body showbody">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="image listing">

    <p class="card-text showtext">
      <%= listing.description %><br>
      &#8377; <%= listing.price.toLocaleString("en-IN") %> / Night<br> 
      <%= listing.location %><br>
      <%= listing.country %><br>
    </p>

    <!-- ✅ SAFE PUBLISHER -->
    <p class="text-muted">
      Published by
      <b>
        <%= listing.owner && listing.owner.username ? listing.owner.username : "Anonymous" %>
      </b>
    </p>

    <!-- ✅ EDIT / DELETE (OWNER ONLY) -->
    <% if (currentUser && listing.owner && listing.owner._id.equals(currentUser._id)) { %>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit"
           class="btn btn-dark mb-3 edit-btn offset-3">
          Edit
        </a>

        <form method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark mb-3 offset-5">
            Delete
          </button>
        </form>
      </div>
    <% } %>

    <hr>

    <!-- ✅ REVIEW FORM (LOGIN ONLY) -->
    <% if (currentUser) { %>
      <div class="col-8 offset-2">
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews"
              method="POST"
              class="needs-validation">

          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="range"
              min="1"
              max="5"
              id="rating"
              name="review[rating]"
              class="form-range"
              required
            >
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea
              name="review[comment]"
              id="comment"
              cols="10"
              rows="5"
              class="form-control"
              required
            ></textarea>
          </div>

          <button class="btn btn-dark mb-3 offset-5">
            Submit
          </button>
        </form>
      </div>
    <% } else { %>
      <p class="text-muted text-center">
        Login to leave a review.
      </p>
    <% } %>

    <hr>

    <!-- ✅ EXISTING REVIEWS -->
    <div class="reviews mt-3">
      <h4>Reviews</h4>

      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <% listing.reviews.forEach(r => { %>
          <div class="card mb-2">
            <div class="card-body">
              <strong>⭐ <%= r.rating %> / 5</strong><br>

              <p><%= r.comment %></p>

              <small class="text-muted">
                By
                <b>
                  <%= r.author && r.author.username ? r.author.username : "Anonymous" %>
                </b>
                • <%= r.createdAt.toDateString() %>
              </small>
            </div>

            <!-- ✅ DELETE REVIEW (AUTHOR ONLY) -->
            <% if (currentUser && r.author && r.author._id.equals(currentUser._id)) { %>
              <form method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= r._id %>?_method=DELETE"
                    class="mb-2">
                <button class="btn btn-small btn-dark">
                  Delete
                </button>
              </form>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p>No reviews yet. Be the first to review!</p>
      <% } %>
    </div>

  </div>
</div>
