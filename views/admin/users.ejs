<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2 class="mb-3">All Users (Admin Panel)</h2>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-secondary' %>">
              <%= user.role %>
            </span>
          </td>
          <td><%= user._id.getTimestamp().toDateString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
